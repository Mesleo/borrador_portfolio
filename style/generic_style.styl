colorPrincipal = #06135a
colorSecundario = #000000
colorTextoTitulos = white
max = 100%
alturaHeader = 70px
paddingA = 15px
paddingB = 20px

@media screen
  #div_top
  width max
  button
    bottom 45px
    right 20px
    display block
    position fixed
    z-index 100
    padding 10px 15px
    border-radius 4px
    background-clip padding-box
    background colorPrincipal
    font-size 30px
    text-align center
    border 0
    cursor pointer

*
  margin 0;
  padding 0;
  box-sizing border-box

a
  text-decoration none

avisited
  text-decoration none
  color inherit

.banner
  height 230px
  background-size 100% 100%
  background-repeat no-repeat
  margin-bottom 30px


body
  width 100%;
  font-size 1.2em

#button_top
  margin-right 80%
  width 15%
  height 40px
  position fixed

#contacto
  width 65%;
  margin auto;
  background-size max max
  text-align center

#contacto a
  text-decoration none;

#div_bottom
  display none

footer
  max-width 100%;
  background-color colorPrincipal;
  margin-top 20px;
  padding 25px;


footer p
  color colorTextoTitulos
  text-align center;


h1, h2, h3, h4
  font-family "Orbitron";

h2
  font-size 1.3em


header
  width 100%;
  background-color colorPrincipal;
  display flex
  flex-direction row
  padding-top 0px


header h1
  font-weight bold;
  display inline
  font-size 1.8em
  width 40%
  margin 0
  padding 18px 0 8px 10px
  color colorTextoTitulos

.ico-down-open
  display inline-block
  background-image url("../media/images/down_open.png")
  margin-left 60%
  width 16px
  height 17px
  vertical-align bottom

main
  width 100%;

main section
  width 100%;

#name
  position absolute
  display none
  text-align center
  width max
  top 30%
  color white
  -webkit-text-fill-color colorPrincipal ;
  -webkit-text-stroke 1px #b3b3b3;
  font-family 'Black+Ops+One'
  font-size 2.5em
  font-style italic
  font-weight bold
  letter-spacing 7px

video
  display none


/** RESOLUCIONES SUPERIORES A 410 PX **/
@media screen and (min-width 410px)

  .banner
    height 280px
    margin-bottom 40px

  footer
    margin-top 40px

  header h1
    padding-top 25px

  video
    display none

/** RESOLUCIONES SUPERIORES A 750 PX **/
@media screen and (min-width 750px)

  .banner
    width max
    z-index 2
    margin-bottom 70px
    height 320px
    #name
      display block

  #div_bottom
    display block
    width max
    top 85%
    z-index 5
    position absolute
    img
      display block
      position relative
      width 3%
      cursor pointer
      margin 0 auto
      animation flechaAnimada  0.7s infinite;

  footer
    height 100px
    letter-spacing 10px
    padding-bottom 10px
    font-size .8em
    margin-top 50px
    picture, img
      width 25px
      margin-right 25px
      margin-bottom 10px

  @keyframes flechaAnimada
    0%
      margin-top -7px
    25%
      margin-top -4px
    50%
      margin-top -2
    75%
      margin-top 1px
    100%
      margin-top 3px

  header
    display flex
    width max
    flex-direction row
    justify-content flex-end
    h1
      font-weight bold;
      display inline-block
      font-size 1.3em
      width 20%
      padding 0
      vertical-align bottom
      padding-left paddingB

  h2, h3
    text-align center

  h3
    margin-bottom 15px

  video
    display block
    width max
    max-height max
