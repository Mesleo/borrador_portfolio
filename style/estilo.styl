colorPrincipal = #06135a
colorSecundario = #000000
colorTextoTitulos = white
max = 100%
alturaHeader = 70px
paddingA = 15px
paddingB = 20px

@media screen
  #div_top
  width max
  button
    bottom: 20px;
    right: 20px;
    display: block;
    position: fixed;
    z-index: 100;
    padding: 10px 15px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
    background-clip: padding-box;
    background: colorPrincipal
    font-size: 30px;
    text-align: center;
    border 0
    cursor pointer


*
  margin 0;
  padding 0;
  box-sizing border-box

a
  text-decoration none

a:visited
  text-decoration none
  color inherit

article
  width max - (5%)
  margin auto
  box-sizing border-box

article p
  font-family "Lato";
  margin 15px 10px 15px 10px;


#banner-home
  background-image url("../media/images/background_inicio_s.jpg");
  height 220px
  background-size: 100% 100%


#banner-home h2
  height 50%;
  padding-top 30%;
  text-align center;


body
  width 100%;

#btn-menu:checked ~ nav
  transform translateX(0%)

#btn-menu
  display none

#button_top
  margin-right 80%
  width 15%
  height 40px
  position fixed

#contacto
  width 55%;
  margin auto;
  background-size max max
  text-align center


#contacto a
  text-decoration none;

footer
  max-width 100%;
  background-color colorPrincipal;
  margin-top 10px;
  padding 25px;


footer p
  color colorTextoTitulos
  text-align center;


h1, h2, h3, h4
  font-family "Orbitron";


h3
  padding-left 20px;
  margin 20px 0 20px 0;


h2
  color white;
  letter-spacing 2px;


header
  max-width 100%;
  background-color colorPrincipal;
  display flex
  flex-direction row
  padding-top 0px
  height alturaHeader


header h1
  font-weight bold;
  display inline
  font-size 1.8em
  width 40%
  margin 0
  padding 18px 0 8px 10px
  color colorTextoTitulos


header label
  font-size 30px
  cursor pointer
  display block

.icon-menu
  background-image url("../media/images/ico_menu_bar.png");
  width 43px;
  margin 15px 8px 15px
  padding 0;
  position absolute
  right 5px
  background-color transparent;
  background-size 100% 100%
  border 0;
  height 42px;

#intro-js
  background-image url("../media/images/js.png")
  &:hover
    background-image url("../media/images/js-trans.png")
    
#intro-php
  background-image url("../media/images/php.png")
  &:hover
    background-image url("../media/images/php-trans.png")
    
#calc-android
  background-image url("../media/images/android_calc.png")
  &:hover
    background-image url("../media/images/android_calc-trans.png")

#intro-python
  background-image url("../media/images/python_s.png")
  &:hover
    background-image url("../media/images/python_s_trans.png")

#intro-js, #intro-php, #calc-android, #intro-python
  width 100%;
  margin 0 auto;
  height 300px
  padding 0
  background-size max max
  margin-bottom 20px
  box-sizing border-box
  box-shadow 4px 4px 1px 2px rgba(206, 210, 217, 0.91)
  -moz-transition-duration 1s
  -moz-transition-property background-image
  -moz-transition-timing-function ease
  -webkit-transition-duration 1s
  -webkit-transition-property background-image
  -webkit-transition-timing-function ease
  -o-transition-duration 1s
  -o-transition-property background-image
  -o-transition-timing-function ease
  -ms-transition-duration 1s
  -ms-transition-property background-image
  -ms-transition-timing-function ease
  transition-duration 1s
  transition-property background-image
  transition-timing-function ease
  &:hover
    background-size max max
  &:hover h4
    display block

#latest-article h4
  display none
  width 50%
  margin auto
  text-align center
  padding-top 40%
  
.ico-down-open
  display inline-block
  background-image url("../media/images/down_open.png")
  margin-left 60%
  width 16px
  height 17px
  vertical-align bottom

#latest-article article
  width 85%

#licenciaCC
  display none

main
  width 100%;

main section
  width 100%;

#mifoto, #mifoto img
  max-width max
  margin auto
  background-size max max

nav
  font-size .9em
  font-family 'Orbitron'
  font-weight bold
  position absolute
  top alturaHeader
  border-top 1px solid
  width 100%
  left 0
  z-index 10
  color white
  transform translateX(-100%)
  transition all 0.5s


nav ul li ul li
  display block
  width max

nav ul
  background colorPrincipal
  display block

nav ul ul
  display none

nav a
  display block
  letter-spacing 2px
  width max
  padding paddingB paddingB
  color colorTextoTitulos
  text-decoration none

nav a:hover
  background rgba(0, 0, 0, 0.31)

nav>ul> li>ul>li a{
  padding-left 40px
}

nav a span
  margin-left 10px

picture
  padding 0
  box-sizing border-box
  border 0

@media screen and (min-width 410px)

  #banner-home
    height 280px
    background-image url("../media/images/background_inicio_m.jpg")

  header
    height h = alturaHeader+12%

  header h1
    padding-top 25px

  .icon-menu
    //margin-top 15px
    height 8%
    width 10%

  #latest-article h4
    display none
    width 50%
    margin auto
    text-align center
    padding-top 30%

  nav
    top alturaHeader+12%


@media screen and (min-width 683px)

  header
    justify-content flex-end
    height 57px

  header h1
    font-weight bold;
    display inline
    font-size 1.5em
    width 20%
    margin 0;
    padding 0;
    padding-top 10px
    padding-left paddingB

  #ico-menu-bar
    display none

  nav
    font-size .9em
    width 80%
    position relative
    top 0
    left 0

  nav ul > li
    width 20%

  nav ul li ul li
    display block
    width max
    padding-left 0

  nav ul
    background colorPrincipal
    display flex
    list-style none
    //flex-direction row

  nav ul ul
    display none
    width 0

  nav a
    display block
    width max
    padding paddingB paddingB
    color colorSecundario
    text-decoration none

  nav a:hover
    background rgba(0, 0, 0, 0.31)

  nav a span
    margin-left 10px

  nav ul li:hover ul
    display block
    position absolute

